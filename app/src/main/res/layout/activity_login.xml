<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">
    <!--图标-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        app:layout_marginTopPercent="10%"
        android:padding="1px"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="30%" />
    <!--控制边界-->
    <ScrollView
        android:id="@+id/login_body"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbars="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">
        
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/login_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--手机号的-->
            <LinearLayout
                android:id="@+id/login_phone"
                app:layout_heightPercent="10%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_marginTopPercent="35%"
                android:paddingStart="13dp"
                android:paddingEnd="13dp">


                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint = "手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorText"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/ib_clea"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@mipmap/clean"
                    android:visibility="gone"/>
            </LinearLayout>
            <View
                android:layout_below="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorHuaXian"/>
            <!--验证码-->
           <LinearLayout
               android:id="@+id/lv_cord"
               app:layout_marginTopPercent="45%"
               app:layout_heightPercent="10%"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:paddingStart="13dp"
               android:paddingEnd="13dp">

               <EditText
                   android:id="@+id/et_identifyingcode"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:hint="请输入验证码"
                   android:inputType="number"
                   android:maxLength="30"
                   android:background="@null"
                   android:text=""
                   android:textColor="@color/colorText"
                   android:textSize="14sp" />
               <ImageView
                   android:id="@+id/clean_yanzhnegma"
                   android:layout_width="40dp"
                   android:layout_height="fill_parent"
                   android:scaleType="centerInside"
                   android:src="@mipmap/clean"
                   android:visibility="gone" />
               <Button
                   android:id="@+id/get_identifyingcode"
                   android:layout_width="90dp"
                   android:layout_height="30dp"
                   android:text="获取验证码"
                   android:textSize="13sp"
                   android:background="@drawable/bg_btn_yzm"
                   android:textColor="@color/colorblue" />
           </LinearLayout>
            <View
                android:layout_below="@+id/lv_cord"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorHuaXian" />
            <Button
                app:layout_marginTopPercent="60%"
                app:layout_heightPercent="10%"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_login_selected"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
            <android.support.percent.PercentRelativeLayout
                android:layout_below="@+id/btn_login"
                android:id="@+id/two_platform_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/QQ_Login"
                    app:layout_widthPercent="17%"
                    app:layout_heightPercent="35%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/weChat_Login"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    app:layout_marginStartPercent="20%"
                    app:layout_marginTopPercent="20%"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_qq"
                    android:layout_alignParentLeft="true" />


                <ImageView
                    android:id="@+id/weChat_Login"
                    app:layout_widthPercent="17%"
                    app:layout_heightPercent="35%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    app:layout_marginEndPercent="20%"
                    app:layout_marginTopPercent="20%"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_wechat"
                    android:layout_alignParentRight="true" />

            </android.support.percent.PercentRelativeLayout>

        </android.support.percent.PercentRelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_contact_servicer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="联系我们"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="关于客服"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
