<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/mine_score_bar"/>
    <LinearLayout
        android:paddingStart="20dp"
        android:id="@+id/ll_mine_score_invitefriends"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:clickable="true"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="邀请好友赚积分"
            android:textColor="@color/titleText"
            android:textSize="18sp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_right_num"
            android:textSize="15sp"
            android:textColor="@color/colorblue"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/tv_question_num"/>

        <ImageView

            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:src="@drawable/icon_more" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorHuaXian" />

    <LinearLayout
        android:paddingStart="20dp"
        android:id="@+id/ll_mine_score_exchange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="兑换会员"
            android:textColor="@color/titleText"
            android:textSize="18sp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/tv_mine_score"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:src="@drawable/icon_more" />
    </LinearLayout>

</LinearLayout>
